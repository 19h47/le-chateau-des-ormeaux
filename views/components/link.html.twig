{% if url %}
	{% apply spaceless %}
		<a
			class="{{
				html_classes(
					'inline-block align-middle lg:text-2xl py-2 px-2.5 lg:py-4 lg:px-7 bg-blue-very-dark-grayish text-white tracking-[-0.025em]',
					classes | default( [] ) | join( ' ' )
				)
			}}"
			href="{{ url }}"
			{{ target ? 'target="_blank" rel="noopener noreferer"' }}
		>
			{{- title -}}
		</a>
	{% endapply %}
{% endif %}
