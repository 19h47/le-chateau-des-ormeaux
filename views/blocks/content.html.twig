{#
 # Blocks: Content
 #}

<article class="py-12 lg:py-24" style="background-color: {{ block.background_color }}; color: {{ block.font_color }};">
	<div class="container grid grid-cols-12 gap-x-6 items-center">

		{%- if block.images -%}
			<div class="{{ html_classes( 'col-span-12 lg:col-span-4 flex flex-wrap gap-6', block.layout == 'right' ? 'lg:col-start-8 lg:order-2' : 'lg:col-start-2 lg:order-1' ) }}">
				{% for item in block.images %}
					<div>
						{{ include( 'components/image.html.twig', { image: item.image } ) }}
						{%- if item.caption -%}
							<p class="mt-3">{{ item.caption }}</p>
						{%- endif -%}
					</div>
				{% endfor %}
			</div>
		{%- endif -%}

		<div class="{{ html_classes( 'col-span-12 mt-6 lg:mt-0 lg:col-span-4 space-y-6', block.layout == 'right' ? 'lg:col-start-2 lg:order-1' : 'lg:col-start-8 lg:order-2' ) }}">

			{% if block.title %}
				<h2 class="text-3xl font-heading italic">{{ block.title }}</h2>
			{% endif %}

			{%- if block.content -%}
				<div class="wysiwyg">{{ block.content }}</div>
			{%- endif -%}

			{%- if block.links -%}
				<div class="flex gap-6 flex-wrap">
					{% for item in block.links %}
						<a class="button" href="{{ item.link.url }}">{{- item.link.title -}}</a>
					{% endfor %}
				</div>
			{%- endif -%}
		</div>

	</div>
</article>
