{#
 # Blocks: Carousel
 #}

{% set parameters = {
	slidesPerView: 'auto',
	loop: true,
	spaceBetween: 24,
	centeredSlides: true,
} %}

<div class="swiper py-12 lg:py-24" style="background-color: {{ block.background_color }};" data-module-carousel data-carousel-parameters='{{ parameters | json_encode() }}'>
	<div class="swiper-wrapper">
		{% for item in block.images %}
			<div class="swiper-slide" style="width: auto;">
				{{- include( 'components/image.html.twig', { classes: [ 'h-[12.75rem] lg:h-[25.5rem] w-auto' ], image: item.image } ) -}}
				{%- if item.caption -%}
					<p class="mt-3">{{ item.caption }}</p>
				{%- endif -%}
			</div>
		{% endfor %}
	</div>
</div>
